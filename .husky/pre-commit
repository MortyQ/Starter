#!/usr/bin/env sh

# Run ESLint check before commit
echo "🔍 Running ESLint check..."
pnpm lint:check

# If ESLint check fails, prevent commit
if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed. Please fix the errors before committing."
  echo "💡 You can run 'pnpm lint' to auto-fix some issues."
  exit 1
fi

echo "✅ ESLint check passed. Proceeding with commit..."
